{% extends "base.njk" %}

{% block title %}Equipos | Listado
{% endblock %}

{% block contenido %}
	<style>
		body {
			background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
			min-height: 100vh;
			font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
		}

		.content-container {
			max-width: 1200px;
			margin: 40px auto;
			padding: 0 20px;
		}

		.page-header {
			background: white;
			border-radius: 15px;
			padding: 30px;
			margin-bottom: 30px;
			box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
			text-align: center;
		}

		.page-header h1 {
			margin: 0;
			color: #667eea;
			font-size: 2.5rem;
			font-weight: bold;
		}

		.table-card {
			background: white;
			border-radius: 15px;
			box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
			overflow: hidden;
		}

		.table {
			margin: 0;
			width: 100%;
			border-collapse: collapse;
		}

		.table thead {
			background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
			color: white;
		}

		.table thead th {
			border: none;
			padding: 20px;
			font-weight: 600;
			text-align: center;
		}

		.table tbody tr {
			transition: background-color 0.2s;
		}

		.table tbody tr:hover {
			background-color: #f8f9fa;
		}

		.table tbody td {
			padding: 20px;
			vertical-align: middle;
			border-bottom: 1px solid #e9ecef;
			text-align: center;
		}

		.btn {
			border-radius: 8px;
			padding: 8px 20px;
			font-weight: 600;
			margin: 0 5px;
			transition: transform 0.2s, box-shadow 0.2s;
			border: none;
			color: white;
			text-decoration: none;
			display: inline-block;
			cursor: pointer;
		}

		.btn:hover {
			transform: translateY(-2px);
			box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
			color: white;
		}

		.btn-success {
			background: linear-gradient(135deg, #10b981 0%, #059669 100%);
		}
		.btn-danger {
			background: linear-gradient(135deg, #ef4444 0%, #dc2626 100%);
		}
		.btn-primary {
			background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
		}

		.empty-state {
			text-align: center;
			padding: 60px 20px;
			color: #6c757d;
		}

		.team-name {
			font-weight: 600;
			color: #495057;
			font-size: 1.1rem;
		}

		.roster-count {
			display: inline-block;
			padding: 4px 12px;
			background-color: #e9ecef;
			border-radius: 20px;
			font-size: 0.85rem;
			color: #495057;
		}
	</style>

	<div class="content-container">
		<div class="page-header">
			<h1>üèÄ Listado de Equipos</h1>
		</div>

		<div class="table-card">
			{% if teams and teams.length > 0 %}
				<table class="table">
					<thead>
						<tr>
							<th>Equipo</th>
							<th>Fundaci√≥n</th>
							<th>Plantilla</th>
							<th>Acciones</th>
						</tr>
					</thead>
					<tbody>
						{% for team in teams %}
							<tr>
								<td>
									<span class="team-name">{{ team.name }}</span>
								</td>
								<td>
									{{ team.foundedAt | date("YYYY") if team.foundedAt else "N/A" }}
								</td>
								<td>
									<span class="roster-count">
										{{ team.roster.length }}
										jugadores
									</span>
								</td>
								<td class="action-buttons">
									<a class="btn btn-success" href="/teams/{{ team.id }}">Ver detalles</a>
									<a class="btn btn-primary" href="/teams/{{ team.id }}/edit">Editar</a>
									<form style="display:inline" action="/teams/{{ team.id }}" method="post">
										<input type="hidden" name="_method" value="delete"/>
										<button type="submit" class="btn btn-danger" onclick="return confirm('¬øEst√°s seguro de borrar este equipo?')">Borrar</button>
									</form>
								</td>
							</tr>
						{% endfor %}
					</tbody>
				</table>
			{% else %}
				<div class="empty-state">
					<h3>No hay equipos registrados</h3>
					<p>
						<a href="/teams/new">Crea el primer equipo de la liga</a>
					</p>
				</div>
			{% endif %}
		</div>
	</div>
{% endblock %}
